// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActivityType {
  SHELF_ADD
  REVIEW
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  handle        String?   @unique
  bio           String?
  aesthetic     String?   @default("light-academia")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  reviews   Review[]
  clubs     ClubMembership[]
  topShelf  TopShelf[]
  ownedClubs Club[] @relation("ClubOwner")

  // Social
  followedBy User[] @relation("UserFollows")
  following  User[] @relation("UserFollows")

  // Shelves
  shelves    Shelf[]

  // Knowledge Base
  notes      Note[]
  folders    Folder[]

  // Lounges
  ownedLounges   Lounge[]        @relation("LoungeCreator")
  loungeMemberships LoungeMembership[]
  loungeMessages LoungeMessage[]

  // Activity
  activities Activity[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Book {
  id           String    @id // Google Books API Volume ID
  title        String
  subtitle     String?
  authors      String[]
  publisher    String?
  publishedDate String?
  description  String?   @db.Text
  pageCount    Int?
  thumbnail    String?
  highResImage String?
  isbn10       String?   @unique
  isbn13       String?   @unique
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  reviews    Review[]
  topShelf   TopShelf[]
  shelves    Shelf[]
  notes      Note[]
  lounges    Lounge[]
  activities Activity[]
}

model Shelf {
  id        String   @id @default(cuid())
  name      String   // e.g. "Favorites", "To Read"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  books      Book[]
  activities Activity[]
}

model Folder {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  parentId  String?
  parent    Folder?  @relation("SubFolders", fields: [parentId], references: [id])
  children  Folder[] @relation("SubFolders")

  notes     Note[]
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   Json?    // TipTap JSON content
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  book      Book?    @relation(fields: [bookId], references: [id])
  bookId    String?

  folder    Folder?  @relation(fields: [folderId], references: [id])
  folderId  String?

  // Graph Links (Self-referential Many-to-Many)
  linksFrom Note[]   @relation("NoteLinks")
  linksTo   Note[]   @relation("NoteLinks")
}

model Review {
  id        String   @id @default(cuid())
  rating    Float // 0.0 to 5.0
  isPublic  Boolean  @default(true)
  vibeTags  String[]
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  book   Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId String

  @@unique([userId, bookId])
}

model Club {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner    User   @relation("ClubOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId  String

  members ClubMembership[]
}

model ClubMembership {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  club   Club   @relation(fields: [clubId], references: [id], onDelete: Cascade)
  clubId String

  @@unique([userId, clubId])
}

model Lounge {
  id            String   @id @default(cuid())
  name          String   @unique
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  creator       User     @relation("LoungeCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId     String

  currentBook   Book?    @relation(fields: [currentBookId], references: [id])
  currentBookId String?

  members       LoungeMembership[]
  messages      LoungeMessage[]
}

model LoungeMembership {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  lounge    Lounge   @relation(fields: [loungeId], references: [id], onDelete: Cascade)
  loungeId  String

  @@unique([userId, loungeId])
}

model LoungeMessage {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  lounge    Lounge   @relation(fields: [loungeId], references: [id], onDelete: Cascade)
  loungeId  String
}

model Activity {
  id        String       @id @default(cuid())
  type      ActivityType
  createdAt DateTime     @default(now())

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  book      Book?        @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    String?

  shelf     Shelf?       @relation(fields: [shelfId], references: [id], onDelete: Cascade)
  shelfId   String?

  // Denormalised shelf name so it survives renames
  shelfName String?

  @@unique([userId, bookId, shelfId])
}

model TopShelf {
  id        String   @id @default(cuid())
  rank      Int // User-defined rank for the book
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  book   Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId String

  @@unique([userId, rank])
  @@unique([userId, bookId])
}
